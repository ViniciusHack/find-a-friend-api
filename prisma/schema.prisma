generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id          String @id @default(uuid())
  responsible String
  name        String
  email       String
  phone       String @unique
  address     String
  password    String
  pets        Pet[]

  @@map("organizations")
}

model Pet {
  id             String          @id @default(uuid())
  organizationId String
  name           String
  description    String
  age            PetAge
  size           PetSize
  energy         PetEnergy
  independency   PetIndependency
  environment    PetEnvironment

  organization Organization @relation(fields: [organizationId], references: [id])

  @@map("pets")
}

enum PetAge {
  PUPPY
  ADULT
  SENIOR
}

enum PetSize {
  XS
  SM
  MD
  LG
  XL
}

enum PetEnergy {
  LOW
  MEDIUM
  HIGH
}

enum PetIndependency {
  LOW
  MEDIUM
  HIGH
}

enum PetEnvironment {
  SM
  MD
  LG
}
